<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/item_product_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/item_product_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toTopOf="@id/item_product_img"
        app:layout_constraintStart_toEndOf="@id/item_product_img"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/item_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/item_product_title"
        app:layout_constraintStart_toStartOf="@id/item_product_title"
        app:layout_constraintBottom_toTopOf="@id/item_product_qut"
        tools:text="aaaaa"/>

    <TextView
        android:id="@+id/item_product_qut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintTop_toBottomOf="@id/item_product_price"
        app:layout_constraintStart_toStartOf="@id/item_product_title"
        app:layout_constraintBottom_toBottomOf="@id/item_product_img"
        tools:text="bbbbbb"/>
</androidx.constraintlayout.widget.ConstraintLayout>