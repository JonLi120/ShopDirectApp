<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:clickable="true"
    android:background="@color/colorWindowBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/old_pwd_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="舊密碼"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/old_pwd_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="18dp"
        android:textSize="22sp"
        android:background="@drawable/bg_border_edittext"
        android:inputType="textPassword"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/old_pwd_lab"
        app:layout_constraintStart_toStartOf="@id/old_pwd_lab"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/new_pwd_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新密碼"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/old_pwd_edit"/>

    <EditText
        android:id="@+id/new_pwd_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:background="@drawable/bg_border_edittext"
        android:inputType="textPassword"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/new_pwd_lab"
        app:layout_constraintStart_toStartOf="@id/old_pwd_edit"
        app:layout_constraintEnd_toEndOf="@id/old_pwd_edit"/>

    <TextView
        android:id="@+id/again_pwd_lab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="再次輸入新密碼"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_pwd_edit"/>

    <EditText
        android:id="@+id/again_pwd_edit"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:textSize="22sp"
        android:background="@drawable/bg_border_edittext"
        android:inputType="textPassword"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/again_pwd_lab"
        app:layout_constraintStart_toStartOf="@id/old_pwd_edit"
        app:layout_constraintEnd_toEndOf="@id/old_pwd_edit"/>

    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@color/colorBlack"
        android:textColor="@color/colorWhite"
        android:text="確認修改"
        android:layout_marginTop="40dp"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintTop_toBottomOf="@id/again_pwd_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>