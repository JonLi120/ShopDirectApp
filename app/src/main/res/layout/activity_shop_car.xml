<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorTitleBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:collapseIcon="@drawable/ic_back">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shop_car_rcv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@id/shop_car_delivery_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/shop_car_delivery_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_car_delivery_lab"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/shop_car_delivery_type"
                app:layout_constraintBottom_toBottomOf="@id/shop_car_delivery_type"/>

            <TextView
                android:id="@+id/shop_car_delivery_type"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/selector_edittext"
                android:text="@string/shop_car_delivery_type_home"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_marginTop="18dp"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toEndOf="@id/shop_car_delivery_lab"
                app:layout_constraintTop_toBottomOf="@id/shop_car_rcv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/shop_car_coupon_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shop_car_coupon_lab"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/shop_car_coupon"
                app:layout_constraintBottom_toBottomOf="@id/shop_car_coupon"/>

            <EditText
                android:id="@+id/shop_car_coupon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_border_edittext"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:maxLines="1"
                android:imeOptions="actionDone"
                app:layout_constraintWidth_percent="0.7"
                app:layout_constraintStart_toEndOf="@id/shop_car_delivery_lab"
                app:layout_constraintTop_toBottomOf="@id/shop_car_delivery_type"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorBlack"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/amount1"/>

            <TextView
                android:id="@+id/amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商品總計\t\t\t\t\tRM"
                android:textSize="18sp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/colorBlack"
                app:layout_constraintTop_toTopOf="@id/shop_amount"
                app:layout_constraintBottom_toBottomOf="@id/shop_amount"
                app:layout_constraintEnd_toStartOf="@id/shop_amount"/>

            <TextView
                android:id="@+id/shop_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/shop_car_coupon"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="101450"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="折扣優惠\t\t\t\t\tRM"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="@id/amount1"
                app:layout_constraintTop_toTopOf="@id/coupon_amount"
                app:layout_constraintBottom_toBottomOf="@id/coupon_amount"/>

            <TextView
                android:id="@+id/coupon_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/shop_amount"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="101450"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="運費\t\t\t\t\tRM"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintEnd_toEndOf="@id/amount1"
                app:layout_constraintTop_toTopOf="@id/delivery_amount"
                app:layout_constraintBottom_toBottomOf="@id/delivery_amount"/>

            <TextView
                android:id="@+id/delivery_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/coupon_amount"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="101450"/>

            <TextView
                android:id="@+id/total_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorRed"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/delivery_amount"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="101350"/>

            <TextView
                android:id="@+id/amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="總金額\t\t\t\t\tRM"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/amount1"
                app:layout_constraintTop_toTopOf="@id/total_amount"
                app:layout_constraintBottom_toBottomOf="@id/total_amount"/>

            <Button
                android:id="@+id/keep_shopping_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:text="@string/shop_car_keep_shopping"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:background="@color/colorBlack"
                android:layout_marginBottom="80dp"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_amount"
                app:layout_constraintEnd_toStartOf="@id/send_order_btn"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/send_order_btn"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/shop_car_send_order"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlack"
                app:layout_constraintWidth_percent="0.35"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/keep_shopping_btn"
                app:layout_constraintStart_toEndOf="@id/keep_shopping_btn"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>