<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/lock_title_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Beneficiary Name"/>


        <ImageView
            android:id="@+id/lock_img"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lock_white"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_user_lock_img"
            app:layout_constraintTop_toBottomOf="@id/lock_title_lab"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/lock_value"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textColor="@color/colorWhite"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/bg_user_lock_edittext"
            app:layout_constraintTop_toTopOf="@id/lock_img"
            app:layout_constraintStart_toEndOf="@id/lock_img"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ababe"/>
</androidx.constraintlayout.widget.ConstraintLayout>